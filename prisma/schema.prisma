generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Student {
  id             String  @id @default(cuid())
  name           String
  mobile_number  String  @unique
  email          String  @unique
  answer_correct Boolean @default(false)
}
